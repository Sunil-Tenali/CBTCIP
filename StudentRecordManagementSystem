#include <iostream>
#include <fstream>
#include <string>

using namespace std;

class Student {
public:
	int Roll_No;
	string name;
	float CGPA;
};

void AddStudent(fstream& file) {

}

void DisplayDetails(fstream& file) {

}

void UpdateDetails(fstream& file) {

}

void DeleteFile(fstream& file) {

}
int main() {
	int choice = 0;
	while (choice != 6) {
		cout << "\nMenu " << endl << endl;
		cout << "1. Add Student" << endl;
		cout << "2. Display student records " << endl;
		cout << "3. Update student record " << endl;
		cout << "4. Delete a Student Record " << endl;
		cout << "5.exit" << endl;
		cin >> choice;

		fstream file;

		switch (choice)
		{
		case 1:
			file.open("student.dat", ios::app | ios::binary);
			if (file.is_open()) {
				AddStudent(file);
				file.close();
			}
			else {
				cout << "ERROR : Cannot open file " << endl;
			}
			break;
		case 2:
			file.open("student.dat", ios::in | ios::binary);
			if (file.is_open()) {
				DisplayDetails(file);
				file.close();
			}
			else {
				cout << "ERROR : Cannot open file " << endl;
			}
			break;

		case 3:
			file.open("student.dat", ios::in | ios::binary);
			if (file.is_open()) {
				UpdateDetails(file);
				file.close();
			}
			else {
				cout << "ERROR : Cannot open file " << endl;
			}
			break;

		case 4:
			file.open("student.dat", ios::in | ios::binary);
			if (file.is_open()) {
				DeleteFile(file);
				file.close();
			}
			else {
				cout << "ERROR : Cannot open file " << endl;
			}
			break;
		case 5:
			cout << "Exiting from the service....." << endl;
			break;
		default:
			cout << "Invalid choice !!" << endl;
			break;

		}
		return 0;
	}#include <iostream>
